<!DOCTYPE import-control PUBLIC
	"-//Checkstyle//DTD ImportControl Configuration 1.4//EN"
	"https://checkstyle.org/dtds/import_control_1_4.dtd">
<import-control pkg="com.swisscom" strategyOnMismatch="allowed">
	<disallow pkg="org.apache.commons.lang"/> <!-- Use org.apache.commons.lang3 -->
	<allow pkg="com.fasterxml.jackson.annotation"/> <!-- Annotations for Sling-Model-Exporter. FIXME: Write a sling-model-exporter based on Gson -->
	<disallow pkg="com.fasterxml.jackson"/> <!-- Use Gson -->
	<disallow pkg="org.apache.sling.commons.json"/> <!-- Use Gson -->
	<disallow pkg="org.json"/> <!-- Use Gson -->
</import-control>